{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@schemas": ["src/generated/zod/index.ts"]
    },
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "scripts/",
    "esModuleInterop": true,
    "strict": true
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",

    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules"]
}
