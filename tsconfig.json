{
  "compilerOptions": {
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "scripts/",
    "esModuleInterop": true,
  },

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "exclude": ["node_modules"]
}
